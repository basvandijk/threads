               , base                 >= 4.4 && < 5
               , stm                  >= 2.1
               , concurrent-extra     >= 0.5.1
               , HUnit                >= 1.2.2
               , test-framework       >= 0.2.4
               , test-framework-hunit >= 0.2.4
